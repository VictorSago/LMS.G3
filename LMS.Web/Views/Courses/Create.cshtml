@model LMS.Core.Entities.Course
@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center text-muted m-2">Create New Course</h4>

<hr />

<div class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <br />

            <h4>Module</h4>
            <hr />
            @{ var module = new Module();}
            <div class="form-group">
                <label class="control-label">Module Title</label>
                <input asp-for="@module.Title" class="form-control" />
                <span asp-validation-for="@module.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Module Description </label>
                <input asp-for="@module.Description" class="form-control" />
                <span asp-validation-for="@module.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Module Start Date</label>
                <input asp-for="@module.StartDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="@module.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Module End Date</label>
                <input asp-for="@module.EndDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="@module.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group  text-center">
                <input type="submit" value="Add Course" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
