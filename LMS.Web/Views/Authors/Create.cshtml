@model LMS.Core.Models.AuthorCreationDto

@{
    ViewData["Title"] = "Create";
}


<h4 class="text-center text-muted m-2">Add Author</h4>

<hr />
<div  class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth.Date" class="text-danger"></span>
            </div>
            <div class="form-group  text-center">
                <input type="submit" value="Add Author" class="btn btn-outline-danger" />
                <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>

        </form>

    </div>
</div>


