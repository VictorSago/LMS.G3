@model LMS.Core.Entities.Activity

@{
    ViewData["Title"] = "CreateFromModule";
}

<h4 class="text-center text-muted m-2">Create New Activity</h4>

<hr />
<div class="row justify-content-center">


    <div class="col-auto bg-light text-muted p-3">
        <form asp-action="CreateFromModule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group" hidden="hidden">
                <label asp-for="ModuleId" class="control-label"></label>
                <input asp-for="ModuleId" class="form-control" />
                <span asp-validation-for="ModuleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"> Activity Type</label>
                <select id="act" asp-for="ActivityType" class="form-control">
                    <option value="A">Assignments</option>
                    <option value="B">E_Learning</option>
                    <option value="C">lectures</option>
                    <option value="D">Other</option>
                </select>
                <span asp-validation-for="ActivityType" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group" id="act2">
                <label class="control-label">Dead line</label>
                <input asp-for="Deadline" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Activity" class="btn btn-outline-danger" />
                <a asp-action="Details" asp-route-id="@Model.ModuleId" class="btn btn-outline-info">Back</a>
            </div>

        </form>
    </div>
</div>
<script>
    let selectActivity = document.getElementById('act');
    let selectActivity2 = document.getElementById('act2');
    selectActivity.addEventListener('change', () => {

        if (selectActivity.value === "B" || selectActivity.value === "C" || selectActivity.value === "D") {
            selectActivity2.style.display = "none";
        } else {
            selectActivity2.style.display = "block";
        }
    });
</script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
