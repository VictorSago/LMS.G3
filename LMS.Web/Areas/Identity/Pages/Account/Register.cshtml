@page
@model RegisterModel
@{ ViewData["Title"] = "Register"; }
<script>
    let navigation = document.getElementById("disp");
    navigation.style.display = "none";
</script>

<div id="register" class="container w-100 mt-5">

    <div class="col text-light w-100 mt-2 p-2">
        <div class="justify-content-center">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="text-light">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-1">
                    <button type="submit" class="site-btn mb-1">Register</button>
                    <a class="site-btn mb-1" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
